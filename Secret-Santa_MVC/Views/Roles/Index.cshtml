@model List<Microsoft.AspNetCore.Identity.IdentityRole<long>>

    <h2>List Roles</h2
    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-controller="Roles" asp-route-id="@role.Id" method="post"> 
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>   
    }
<a asp-action="Create" asp-controller="Roles">Add role</a>
<a asp-action="UserList" asp-controller="Roles">List users</a>
<a asp-action="AddDefaultRoles" asp-controller="Roles">Add default roles</a>
@model Secret_Santa_MVC.Data.Entities.JoinToRoomRequest
<div>
    <form method="post"asp-action="JoinToRoom" asp-controller="Game">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="InviteLink"></label>
            <input asp-for="InviteLink" />
            <span asp-validation-for="InviteLink"></span>
        </div>
        <div class="form-group">
            <label asp-for="Wish"></label>
            <input asp-for="Wish" />
            <span asp-validation-for="Wish"></span>
        </div>
        <input type="submit" value="Ok" />
    </form>
</div>
@model Secret_Santa_MVC.Data.Entities.ChangePasswordViewModel
@{
    ViewBag.Title = "Edit Password";
}
<h2>Edit password for user @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="AccountSettings">
    <div asp-validation-summary="All" hn y4class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Old password</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword"class="control-label">New password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>
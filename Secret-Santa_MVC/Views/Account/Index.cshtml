<html>
    <head>
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    </head>
    <body>
        @if(User.Identity.IsAuthenticated)
    {
        <p>You already authorized</p>
    }
    else{
    <div class="Index">
        <a asp-action="Register" asp-controller="Account">Register</a>
        <br/>
        <a asp-action="Authenticate" asp-controller="Account">Login</a>
        <br/>
        <a asp-action="ForgotPassword" asp-controller="AccountSettings">Forgot Password</a>
    </div>
    }
    </body>
</html>